<%- include('header.ejs') -%>

<h1><%= title %></h1>

<h3>All Club Gear</h3>
<table>
    <tr>
        <th>Gear ID</th>
        <th>Category</th>
        <th>Manufacturer</th>
        <th>Product</th>
        <th>Color</th>
        <th>Available</th>
    </tr>
    <% allGear.forEach( (row) => { %>
        <tr>
            <td><%= row.gear_id %></td>
            <td><%= row.category %></td>
            <td><%= row.manufacturer %></td>
            <td><%= row.product_name %></td>
            <td><%= row.color %></td>
            <td><%= row.available %> / <%= row.quantity %></td>
        </tr><% }); %>
</table>
<br>

<h3>Borrowed Gear</h3>
<table>
    <tr>
        <th>User</th>
        <th>Gear ID</th>
        <th>Quantity</th>
        <th>Date</th>
        <th>Destination</th>
    </tr>
    <% tickets.forEach( (row) => { %>
        <tr>
            <td><%= row.user_id %></td>
            <td><%= row.gear_id %></td>
            <td><%= row.quantity %></td>
            <td><%= row.date_out %></td>
            <td><%= row.destination %></td>
        </tr><% }); %>
</table>

<%- include('footer.ejs') -%>
