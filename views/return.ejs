<%- include('header.ejs') -%>
    
<h1><%= title %></h1>

<h3>Borrowed Gear</h3>
<table>
    <tr>
        <th>User</th>
        <th>Gear ID</th>
        <th>Quantity</th>
        <th>Date</th>
        <th>Destination</th>
    </tr>
    <% tickets.forEach( (row) => { %>
        <tr>
            <td><%= row.user_id %></td>
            <td><%= row.gear_id %></td>
            <td><%= row.quantity %></td>
            <td><%= row.date_out %></td>
            <td><%= row.destination %></td>
        </tr><% }); %>
</table>

