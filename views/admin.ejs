<form enctype="application/x-www-form-urlencoded" method="post" action="/admin-checkout">
    <table>
        <tr>
            <th>User</th>
            <th>Gear ID</th>
            <th>Quantity</th>
            <th>Destination</th>
            <th>Select</th>
        </tr>
        <% if(checkout.forEach){ checkout.forEach( (row) => { %>
            <tr>
                <td><%= row.user_id %></td>
                <td><%= row.gear_id %></td>
                <td><%= row.quantity %></td>
                <td><%= row.destination %></td>
                <td>
                    <input
                        type="checkbox"
                        name="<%= row.ticket_id %>"
                    >
                </td>
            </tr><% });} %>
    </table>
    <input type="submit" value="Approve Checkout">
</form>



