<%- include('header.ejs') -%>

<h1><%= title %></h1>


<h3>Checkin Request</h3>
<form enctype="application/x-www-form-urlencoded" method="post" action="/admin-checkin">
    <table>
        <tr>
            <th>User</th>
            <th>Gear ID</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Destination</th>
        </tr>
        <% if(checkin.forEach) { checkin.forEach( (row) => { %>
            <tr>
                <td><%= row.user_id %></td>
                <td><%= row.gear_id %></td>
                <td><%= row.quantity %></td>
                <td><%= `${row.date_out.getMonth()+1}-${row.date_out.getDate()}-${row.date_out.getFullYear()}` %></td>
                <td><%= row.destination %></td>
                <td>
                    <input
                        type="checkbox"
                        name="<%= row.ticket_id %>"
                    >
                </td>
            </tr><% });} %>
    </table>
    <input type="submit" value="Approve Checkin">
</form>

